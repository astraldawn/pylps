#:kivy 1.0

<VSDisplay>
    size_hint_y: None
    height: 100
    id: root.identity
    orientation: 'horizontal'

    BoxLayout:
        size_hint: (.2, 1)
        Label:
            text: 'Time ' + root.time

    RelativeLayout:
        id: tpdisplay

<PylpsMainScreen>:

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 1
            size_hint: (1, .1)

            Label:
                text: root.current_time_str + ' / ' + root.max_time_str

            Label:
                text: 'Execution status: ' + root.exec_status

        GridLayout:
            cols: 1
            size_hint: (1, .8)

            ScrollView:
                id: scrollgridview
                on_touch_down: root.scroll_view()

                GridLayout:
                    id: scrollgrid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

        GridLayout:
            cols: 5
            size_hint: (1, .10)
            row_default_height: 30

            Button:
                text: ''
            Button:
                text: 'RUN'
                on_press: root.pylps_execute()
            Button:
                text: 'RUN_1_STEP'
                on_press: root.pylps_execute(stepwise=True)
            Button:
                text: 'RESET'
                on_press: root.reset_display(full_reset=True)
            Button:
                text: ''
            Button:
                text: 'BACK_ALL'
                on_press: root.move_timepoint('BACK_ALL')
            Button:
                text: 'BACK_1'
                on_press: root.move_timepoint('BACK_1')
            Button:
                text: 'PLAY'
                on_press: root.play()
            Button:
                text: 'FORWARD_1'
                on_press: root.move_timepoint('FWD_1')
            Button:
                text: 'FORWARD_ALL'
                on_press: root.move_timepoint('FWD_ALL')